<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script src="/socket.io/socket.io.js"></script>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

  <!-- Popper JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=VT323">

  <style>
    pre {
      width: 300px;
      height: 300px;
      overflow: scroll;
      background: black;
      color: white;
      padding-left: 10px;
    }

    .card {
      margin-top: 50px;
      padding: 20px;
    }

    button {
      margin: 10px;
    }

    .progress {
      margin: 10px;
    }

    .row {
      display: flex;
      flex-flow: row;
      align-items: center;
      /* justify-content: space-evenly; */
    }

    .second {
      flex: 1 1 auto;
      text-align: center;
      font-size: 20rem;
      font-family: 'VT323', serif;
      background-color: black;
      line-height: 18rem;
      text-shadow: 0 0 10px #fff, 0 0 20px #fff, 0 0 30px #ffc107, 0 0 40px #ffc107, 0 0 50px #ffc107, 0 0 60px #e60073, 0 0 70px #e60073;
    }

    video{
      height: 400px;
    }
  </style>
</head>

<body>

  <div class="container">
    <div class="card">
      
      <video id="videoPlayer" controls>
        <source src="http://localhost:11000/video" type="video/mp4">
      </video>

      <button type="button" class="btn btn-primary" onclick="start()">start</button>
      <button type="button" class="btn btn-primary" onclick="stop()">Stop</button>

      <h1><%= text %></h1>
      <h4>time : <%= time %></h4>
      <div class="progress">
        <div id="progressBar" class="progress-bar bg-info" style="width:30%"></div>
      </div>
      <div class="row">
        <pre id="logs" class="logs"></pre>
        <h1 class="second text-warning"></h1>
      </div>
    </div>
  </div>


  <script>
    const socket = io();

    socket.on('connect', () => {
      // either with send()
      socket.send('Hello!');
    });

    // handle the event sent with socket.send()
    const logs = document.getElementById('logs')

    let texts = ''

    let count = 0

    socket.on('message', data => {
      // console.log('Sadeq you have a message');
      console.log(data)
      let s = data.s
      $(".second").text(`${s}`)
      texts = texts + '\n' + JSON.stringify(data, undefined, 2)
      logs.innerText = texts
      scrollDown()
      count += 1
      updateProgress(parseFloat(count / (count + 10) * 100))
    });

    function stop() {
      socket.send('stop')
    }
    function start() {
      socket.send('start')
    }
    function scrollDown() {
      $(document).ready(function () {
        $("pre").animate({ scrollTop: $('pre').prop("scrollHeight") }, 1000);
      });
    }
    function updateProgress(p) {
      $(document).ready(function () {
        $("#progressBar").attr("style", `width:${p}%`);
      });
    }
  </script>
</body>

</html>